<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.controllers.TelaInicialController" >

    <!-- Menu lateral -->
    <left>
        <VBox alignment="TOP_LEFT" spacing="20.0" BorderPane.alignment="CENTER_LEFT">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>

            <Label text="Menu" style="-fx-font-size: 20px;" minWidth="200"/>

            <Button text="Produtos" onAction="#onCadastroProdButtonClick" minWidth="200"/>
            <Button text="Vendas" onAction="#onVendasButtonClick" minWidth="200"/>
            <Button text="Clientes" onAction="#onClientesButtonClick" minWidth="200"/>
            <Button text="Relatorios" onAction="#onRelatoriosButtonClick" minWidth="200"/>
        </VBox>
    </left>
    <!-- Área onde as telas serão carregadas -->
    <center>
        <BorderPane fx:id="conteudoPane" BorderPane.alignment="CENTER" minWidth="200" minHeight="200"/>

    </center>
</BorderPane>
